<body>

  <h1>ðŸ¤– ê°€ìœ„ë°”ìœ„ë³´ AI ê²Œìž„</h1>
  <button onclick="init()">Start Webcam</button>
  <button onclick="playGame()">AIì™€ ëŒ€ê²°</button>

  <div id="webcam-container"></div>
  <div id="label-container"></div>
  <div id="result"></div>

  <script src="https://cdn.jsdelivr.net/npm/@tensorflow/tfjs@latest"></script>
  <script src="https://cdn.jsdelivr.net/npm/@teachablemachine/image@latest"></script>
  <script>
    const URL = "./my_model/";
    let model, webcam, labelContainer, maxPredictions;
    let currentUserGesture = "";

    async function init() {
      const modelURL = URL + "model.json";
      const metadataURL = URL + "metadata.json";

      model = await tmImage.load(modelURL, metadataURL);
      maxPredictions = model.getTotalClasses();

      const flip = true;
      webcam = new tmImage.Webcam(200, 200, flip);
      await webcam.setup();
      await webcam.play();
      window.requestAnimationFrame(loop);

      document.getElementById("webcam-container").appendChild(webcam.canvas);
      labelContainer = document.getElementById("label-container");
      for (let i = 0; i < maxPredictions; i++) {
        labelContainer.appendChild(document.createElement("div"));
      }
    }

    async function loop() {
      webcam.update();
      await predict();
      window.requestAnimationFrame(loop);
    }

    async function predict() {
      const prediction = await model.predict(webcam.canvas);
      prediction.sort((a, b) => b.probability - a.probability);
      currentUserGesture = prediction[0].className;
      for (let i = 0; i < maxPredictions; i++) {
        labelContainer.childNodes[i].innerHTML =
          prediction[i].className + ": " + prediction[i].probability.toFixed(2);
      }
    }

    function playGame() {
      const choices = ["Rock", "Paper", "Scissors"];
      const aiChoice = choices[Math.floor(Math.random() * 3)];
      let resultText = "";

      if (currentUserGesture === aiChoice) {
        resultText = `ðŸ¤ ë¹„ê¹€! (AI: ${aiChoice})`;
      } else if (
        (currentUserGesture === "Rock" && aiChoice === "Scissors") ||
        (currentUserGesture === "Scissors" && aiChoice === "Paper") ||
        (currentUserGesture === "Paper" && aiChoice === "Rock")
      ) {
        resultText = `ðŸŽ‰ ì´ê¹€! (AI: ${aiChoice})`;
      } else {
        resultText = `ðŸ˜¢ ì§! (AI: ${aiChoice})`;
      }

      const resultDiv = document.getElementById("result");
      resultDiv.innerHTML = resultText;
      resultDiv.classList.remove("bounce");
      void resultDiv.offsetWidth; // re-trigger animation
      resultDiv.classList.add("bounce");
    }
  </script>
